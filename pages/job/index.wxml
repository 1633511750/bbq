<view class="wrap">
  <Top></Top>

  <view class="top" style="top: {{statusBarHeight + 45}}px;">
    <scroll-view show-scrollbar="{{false}}" enhanced scroll-x="true" class="scroll-wrap">
      <navigator class="navigator" bindtap="titleTap_fun" data-index="{{index}}" wx:for="{{topList_arr}}" wx:key="item">
        <text class="{{currentTitle_int === index?'active':''}}">{{item}}</text>
      </navigator>
    </scroll-view>    
  </view>
  <view class="blank" style="margin-top: {{statusBarHeight + 45}}px;"></view>
  <view class="item-wrap" wx:for="{{itemList_arr}}">
    <view class="headPic"></view>
    <view class="right">
      <view class="right-top clearfix">
        <text class="title">{{item.title}}</text>
        <text class="type">{{item.type}}</text>
      </view>
      <view class="exp" wx:for="{{item.tag}}" wx:key="*this" wx:for-item="item2">{{item2}}</view>
      <view class="zan">
        <view class="zan-up">
          <image src="/img/zan_up_active.png" mode="aspectFit" />
          <text>{{item.zanUp}}</text>
        </view>
        <view class="zan-down">
          <image src="/img/zan_down.png" mode="aspectFit" />
          <text>{{item.zanDown}}</text>
        </view>
      </view>
    </view>
  </view>
</view>