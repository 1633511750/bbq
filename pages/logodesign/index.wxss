page {
  height: 100vh;
  background-color: #fff;
}
page .lbt {
  height: 408rpx;
  width: 100%;
  margin-top: 15rpx;
}
page .top {
  height: 210rpx;
  line-height: 95rpx;
  color: #555;
  font-size: 32rpx;
  padding: 10rpx 40rpx;
  background-color: #fff;
}
page .top .price-wrap {
  line-height: 105rpx;
}
page .top .price-wrap .price {
  padding: 0 30rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  margin-left: 45rpx;
  background-color: #d7d7d7;
  border-radius: 32rpx;
  display: inline-block;
}
page .top .title {
  font-weight: bold;
}
page .top .lianxi {
  width: 132rpx;
  height: 40rpx;
  font-size: 24rpx;
  line-height: 36rpx;
  text-align: center;
  border-radius: 20rpx;
  border: 2rpx solid #555;
  float: right;
  margin-top: 30rpx;
}
page .top .con {
  font-size: 32rpx;
  line-height: 44rpx;
  padding: 30rpx 0;
}
page .top .bottom {
  padding-bottom: 30rpx;
}
page .top .bottom image {
  width: 330rpx;
  height: 330rpx;
  display: inline-block;
  margin-right: 10rpx;
  margin-top: 10rpx;
  vertical-align: middle;
  border-radius: 15rpx;
}
page .top .bottom image:nth-child(2n) {
  margin-right: 0;
}
