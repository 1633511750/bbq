.wrap {
  height: 100vh;
}
.wrap::before {
  content: '';
  display: block;
  width: 100%;
  height: 15rpx;
  background-color: var(--colorGray);
}
.wrap .con {
  padding: 30rpx;
}
.wrap .con textarea {
  width: 690rpx;
  height: 200rpx;
  font-size: 32rpx;
  line-height: 40rpx;
  max-height: 500rpx;
}
.wrap .con .item-wrap {
  margin-top: 5rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.wrap .con .item-wrap image {
  flex: 0 0 220rpx;
  width: 220rpx;
  height: 220rpx;
  margin-top: 15rpx;
}
.wrap .con .con-foot {
  margin-top: 20rpx;
}
.wrap .con .con-foot image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.wrap .con .con-foot .school {
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #aaa;
}
.wrap .con .con-foot .fishing {
  float: right;
  height: 40rpx;
  line-height: 35rpx;
  font-size: 24rpx;
  padding: 0 20rpx;
  border-radius: 22rpx;
  vertical-align: middle;
  color: var(--colorBlue);
  border: 1px solid var(--colorBlue);
}
.wrap .footer {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  display: flex;
  align-items: center;
}
.wrap .footer::before {
  content: '';
  position: absolute;
  top: -20rpx;
  width: 100%;
  height: 18rpx;
  background-color: var(--colorGray);
}
.wrap .footer image {
  width: 50rpx;
  height: 50rpx;
}
.wrap .footer .img1 {
  margin-left: 30rpx;
}
.wrap .footer .img2 {
  margin-left: 115rpx;
}
.wrap .footer .img3 {
  margin-left: 115rpx;
}
.wrap .footer .btn {
  margin-left: 200rpx;
  text-align: center;
  width: 100rpx;
  height: 50rpx;
  line-height: 48rpx;
  font-size: 32rpx;
  color: white;
  background-color: #ff7e17;
  border-radius: 10rpx;
}
