page {
  background-color: var(--colorGray);
  margin-top: 15rpx;
}
page .img-wrap {
  width: 100%;
  height: 410rpx;
  background-color: #ddd;
  position: relative;
}
page .img-desc {
  position: absolute;
  z-index: 1;
  left: 50%;
  top: 150rpx;
  transform: translateX(-50%);
}
page .img-desc .add {
  width: 100rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  border-radius: 50%;
}
page .img-desc .add .up {
  display: flex;
}
page .img-desc .add .up .left {
  width: 50rpx;
  height: 50rpx;
  border-right: 1rpx solid #999;
  border-bottom: 1rpx solid #999;
}
page .img-desc .add .up .right {
  width: 49rpx;
  height: 50rpx;
  border-bottom: 1rpx solid #999;
}
page .img-desc .add .down {
  display: flex;
}
page .img-desc .add .down .left {
  width: 50rpx;
  height: 49rpx;
  border-right: 1rpx solid #999;
}
page .img-desc .add .down .right {
  width: 49rpx;
  height: 49rpx;
}
page .img-desc .text {
  padding-top: 50rpx;
  font-size: 36rpx;
}
page .item-wrap {
  position: relative;
  height: 90rpx;
  color: #797979;
  font-size: 36rpx;
  background-color: #fff;
}
page .item-wrap .name {
  position: absolute;
  left: 56rpx;
  top: 40rpx;
}
page .item-wrap input {
  width: 490rpx;
  height: 50rpx;
  border: 1px solid #aaa;
  position: absolute;
  left: 222rpx;
  top: 40rpx;
  padding-left: 10rpx;
}
page .item-wrap.last {
  padding-bottom: 130rpx;
  margin-bottom: 15rpx;
}
page .bottom-wrap {
  background-color: #fff;
  padding: 40rpx;
  margin-bottom: 135rpx;
}
page .bottom-wrap .desc {
  width: 670rpx;
  min-height: 150rpx;
  margin-bottom: 30rpx;
  color: #333;
  border: 1px solid #ccc;
}
page .bottom-wrap .img {
  width: 334rpx;
  height: 334rpx;
  float: left;
  position: relative;
}
page .bottom-wrap .img image {
  width: 334rpx;
  height: 334rpx;
  border: 1px solid #ccc;
}
page .bottom-wrap .img .img-close {
  width: 60rpx;
  height: 60rpx;
  background-color: #0006;
  text-align: center;
  line-height: 58rpx;
  color: #fff;
  font-size: 50rpx;
  position: absolute;
  top: 1rpx;
  right: 1rpx;
}
page .bottom-wrap .img.add {
  width: 334rpx;
  height: 334rpx;
  border: 1px solid #ccc;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
page .bottom-wrap .img.add .top {
  display: flex;
}
page .bottom-wrap .img.add .top .left {
  width: 100rpx;
  height: 100rpx;
  border-right: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
}
page .bottom-wrap .img.add .top .right {
  width: 100rpx;
  height: 100rpx;
  border-bottom: 1rpx solid #ccc;
}
page .bottom-wrap .img.add .bottom {
  display: flex;
}
page .bottom-wrap .img.add .bottom .left {
  width: 100rpx;
  height: 100rpx;
  border-right: 1rpx solid #ccc;
}
page .bottom-wrap .img.add .bottom .right {
  width: 100rpx;
  height: 100rpx;
}
page .bottom-btn {
  width: 100%;
  height: 120rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #02A7F0;
  color: #fff;
  font-size: 36rpx;
  text-align: center;
  line-height: 120rpx;
}
