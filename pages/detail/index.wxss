.wrap {
  height: 100vh;
  background-color: var(--colorGray);
  overflow: auto;
}
.wrap .comment {
  background-color: #fff;
  width: 718rpx;
  margin-left: 16rpx;
  margin-top: 15rpx;
  padding: 32rpx 34rpx 32rpx;
  border-radius: 10rpx;
  position: relative;
  box-shadow: 0 0 10rpx 0 #F2F2F2;
}
.wrap .comment .item .headPic {
  width: 85rpx;
  height: 85rpx;
  border-radius: 41rpx;
  background-size: 100% 100%;
}
.wrap .comment .item .info {
  width: calc(100% - 105rpx);
  float: right;
}
.wrap .comment .item .info .info-top .name {
  max-width: 450rpx;
  height: 56rpx;
  line-height: 56rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 26rpx;
  font-weight: bold;
  color: #666;
  position: absolute;
  top: 28rpx;
  left: 140rpx;
}
.wrap .comment .item .info .info-top .name image {
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
  position: relative;
  top: -2rpx;
}
.wrap .comment .item .info .info-top .dot {
  width: 50rpx;
  height: 50rpx;
  padding: 10rpx;
  margin-right: 10rpx;
  position: absolute;
  top: 34rpx;
  right: 16rpx;
}
.wrap .comment .item .info .info-top .video {
  height: 36rpx;
  line-height: 34rpx;
  padding: 0 20rpx;
  border-radius: 21rpx;
  color: #fff;
  position: absolute;
  top: 40rpx;
  right: 100rpx;
  background-color: #43D7B5;
  font-size: 22rpx;
}
.wrap .comment .item .info .info-bottom {
  font-size: 20rpx;
  color: #aaa;
  position: absolute;
  left: 140rpx;
  top: 84rpx;
  height: 28rpx;
  line-height: 28rpx;
}
.wrap .comment .item .info .info-bottom .time {
  margin-left: 10rpx;
}
.wrap .comment .desc {
  line-height: 44rpx;
  font-size: 32rpx;
  margin-top: 28rpx;
}
.wrap .comment .img {
  margin-top: 20rpx;
}
.wrap .comment .img image {
  float: left;
  margin-left: 10rpx;
  margin-bottom: 10rpx;
  width: 206rpx;
  height: 206rpx;
  border-radius: 15rpx;
}
.wrap .comment .footer {
  margin-top: 25rpx;
  padding: 0 30rpx;
