.wrap .comment .footer .f3 image {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}
.wrap .comment .footer .f3 .zan {
  font-size: 28rpx;
  position: relative;
  top: 3rpx;
  margin-left: 10rpx;
  font-weight: lighter;
}
