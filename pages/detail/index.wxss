  font-size: 30rpx;
}
.wrap .do .pl-wrap .pl .info-wrap .info .heart-num {
  float: right;
  color: #aaa;
  margin-right: 10rpx;
}
.wrap .do .pl-wrap .pl .info-wrap .info image {
  margin-top: 15rpx;
  line-height: 60rpx;
  float: right;
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}
.wrap .do .pl-wrap .pl .info-wrap .pl-con {
