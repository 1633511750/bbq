  line-height: 34rpx;
  padding: 0 15rpx;
  margin-left: 20rpx;
  font-size: 24rpx;
  border-radius: 17rpx;
  background-color: var(--colorGray);
}
.wrap .do .pl-wrap .pl .info-wrap .pl-reply-wrap .pl-reply-con {
  padding: 30rpx 30rpx 0 0;
}
.wrap .do .pl-wrap .pl .info-wrap .pl-reply-wrap .pl-reply-con .reply-headPic {
  float: left;
  width: 60rpx;
  height: 60rpx;
  background-size: contain;
  border-radius: 50%;
}
.wrap .do .pl-wrap .pl .info-wrap .pl-reply-wrap .pl-reply-con .reply-info-wrap {
  width: 458rpx;
  float: right;
}
.wrap .do .pl-wrap .pl .info-wrap .pl-reply-wrap .pl-reply-con .reply-info-wrap .reply-info {
  line-height: 60rpx;
}
.wrap .do .pl-wrap .pl .info-wrap .pl-reply-wrap .pl-reply-con .reply-info-wrap .reply-info .reply-name {
  color: #aaa;
  float: left;
  font-size: 30rpx;
}
.wrap .do .pl-wrap .pl .info-wrap .pl-reply-wrap .pl-reply-con .reply-info-wrap .reply-info .reply-heart-num {
  float: right;
  color: #aaa;
  margin-right: 10rpx;
}
.wrap .do .pl-wrap .pl .info-wrap .pl-reply-wrap .pl-reply-con .reply-info-wrap .reply-info image {
  margin-top: 15rpx;
