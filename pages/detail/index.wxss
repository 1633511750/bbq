}
.wrap .dialog-wrap .dialog .top .text {
  font-size: 34rpx;
  color: #747474;
}
.wrap .dialog-wrap .dialog .top .item-wrap {
  margin-top: 45rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.wrap .dialog-wrap .dialog .top .item-wrap .item {
  font-weight: normal;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0;
  background-color: transparent;
}
.wrap .dialog-wrap .dialog .top .item-wrap .item image {
  width: 100rpx;
  height: 100rpx;
}
.wrap .dialog-wrap .dialog .top .item-wrap .item .title {
  margin-top: 25rpx;
  color: #747474;
  font-size: 20rpx;
}
.wrap .dialog-wrap .dialog .blank {
  height: 15rpx;
  background-color: var(--colorGray);
}
.wrap .dialog-wrap .dialog .bottom {
  text-align: center;
  line-height: 120rpx;
  font-size: 34rpx;
  color: #aaa;
}
.wrap .pinglun-wrap {
  height: 100vh;
  width: 100vw;
  background-color: #0002;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 4;
}
.wrap .pinglun-wrap .pinglun {
  width: 100%;
  background-color: #fff;
  position: fixed;
  border-top-left-radius: 25rpx;
  border-top-right-radius: 25rpx;
  padding: 30rpx 30rpx 0;
  z-index: 5;
}
.wrap .pinglun-wrap .pinglun .top-wrap textarea {
  width: 590rpx;
  height: 160rpx;
