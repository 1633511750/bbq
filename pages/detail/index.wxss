  border-radius: 25rpx;
  padding: 20rpx 30rpx;
  background-color: var(--colorGray);
}
.wrap .pinglun-wrap .pinglun .top-wrap image {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 50rpx;
  top: 30rpx;
}
.wrap .pinglun-wrap .pinglun .pic-wrap {
  padding-top: 20rpx;
  margin-bottom: 20rpx;
}
.wrap .pinglun-wrap .pinglun .pic-wrap image {
