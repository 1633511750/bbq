  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}
.wrap .comment .footer .f1 .heart {
  font-size: 28rpx;
  position: relative;
  top: 3rpx;
  margin-left: 10rpx;
  font-weight: lighter;
}
.wrap .comment .footer .f2 {
  flex: 1;
  text-align: center;
}
.wrap .comment .footer .f2 image {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}
.wrap .comment .footer .f2 .chat {
  font-size: 28rpx;
  position: relative;
  top: 3rpx;
  margin-left: 10rpx;
  font-weight: lighter;
