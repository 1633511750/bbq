.wrap .do .pl-wrap .pl {
  padding: 30rpx 30rpx 0 30rpx;
}
.wrap .do .pl-wrap .pl .headPic {
  float: left;
  width: 60rpx;
  height: 60rpx;
  background-size: contain;
  border-radius: 50%;
}
.wrap .do .pl-wrap .pl .info-wrap {
  width: 570rpx;
  float: right;
}
.wrap .do .pl-wrap .pl .info-wrap .info {
  line-height: 60rpx;
}
.wrap .do .pl-wrap .pl .info-wrap .info .name {
  color: #aaa;
