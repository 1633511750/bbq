}
.wrap .do .pl-wrap .pl .info-wrap .pl-foot .date {
  font-size: 26rpx;
  color: #aaa;
  position: relative;
}
.wrap .do .pl-wrap .pl .info-wrap .pl-foot .date::after {
  display: block;
