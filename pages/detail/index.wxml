<view class="wrap">
  <view class="blank"></view>
  <view class="comment clearfix">
    <view class="item clearfix">
      <image class="headPic" src="{{avatarUrl_str}}"></image>
      <view class="info">
        <view class="info-top clearfix">
          <text class="name">{{name_str}}</text>
          <image src="/img/dot.png" mode="aspectFit" class="dot" bindtap="showActionDialog_fun"></image>
          <text class="video">{{category_str}}</text>
        </view>
        <view class="info-bottom">
          <text class="date">{{date_str}}</text>
          <text class="time">{{time_str}}</text>
        </view>
      </view>
    </view>
    <view class="desc" style="white-space:pre-line">{{content_str}}</view>
    <view class="img clearfix" wx:if="{{img_arr.length > 0}}">
      <image mode="aspectFill" wx:for="{{img_arr}}" bindtap="previewImage_fun" data-urls="{{img_arr}}" data-cururl="{{item}}" wx:key="*this" src="{{item}}"></image>
    </view>
  </view>

  <view class="do">
    <view class="footer">
      <view class="f1" bindtap="showDialog_fun">
        <image mode="aspectFit" src="/img/zhuanfa.png"></image>
        <text class="heart">{{pageviews_str}}</text>
      </view>
      <view class="f2">
        <image mode="aspectFit" src="/img/chat.png"></image>
        <text class="chat">{{commentListNum_str}}</text>
      </view>
      <view class="f3" bindtap="dotZan_fun">
        <image mode="aspectFit" src="{{isZan_bool ? '/img/zan_active.png' : '/img/zan.png'}}"></image>
        <text class="zan">{{dianzanNum_str}}</text>
      </view>
    </view>
    <view class="pl-wrap" wx:if="{{reply_arr.length > 0}}">
      <view class="pl clearfix" wx:for="{{reply_arr}}" wx:key="id">
        <image class="headPic" src="{{avatarUrl_str}}"></image>
        <view class="info-wrap">
          <view class="info clearfix">
            <text class="name">{{item.nmId_str}}</text>
            <image mode="aspectFit" src="/img/zan_active.png"/>
            <text class="heart-num">30</text>
          </view>
          <view class="pl-con">{{item.content}}</view>
          <view class="pl-foot">
            <text class="date">{{item.date_str}}  {{item.time_str}}</text>
            <text class="reply" data-index="{{index}}" data-id="{{item.id}}" bindtap="getCommentReply_fun">{{item.commentListNum_int}}回复</text>
            <text class="reply-btn" data-index="{{index}}" data-id="{{item.id}}" data-nmid="{{item.nmId_str}}" bindtap="replyBtn_fun">回复{{item.nmId_str}}</text>
          </view>
          <view class="pl-reply-wrap">
            <view class="pl-reply-con clearfix" wx:for="{{item.reply}}" wx:key="id">
              <image class="reply-headPic" src="{{avatarUrl_str}}"></image>
              <view class="reply-info-wrap">
                <view class="reply-info clearfix">
                  <text class="reply-name">{{item.nmId_str}}</text>
                </view>
                <view class="reply-pl-con">{{item.content}}</view>
                <view class="reply-pl-foot">
                  <text class="reply-date">{{item.date_str}}  {{item.time_str}}</text>
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
    <view wx:else class="no-reply">{{replyResult_str}}</view>
  </view>

  <view class="write-pl">
    <view class="input" bindtap="showPingLun_fun">写评论......</view>
  </view>

  <view bindtap="hideDialog_fun" class="dialog-wrap" wx:if="{{showDialog_bool}}">
    <view class="dialog" catchtap="temp_fun">
      <view class="top">
        <text class="text">分享至</text>
        <view class="item-wrap">
          <button open-type="share" class="item">
            <image bindtap="share_fun" mode="aspectFit" src="/img/wechat.png"/>
            <text class="title">微信好友</text>
          </button>
          <view class="item" bindtap="friendsCircle_fun">
            <image mode="aspectFit" src="/img/friends_circle.png"/>
            <text class="title">朋友圈</text>
          </view>
        </view>
      </view>
      <view class="blank"></view>
      <view class="bottom" bindtap="hideDialog_fun">取消</view>
    </view>
  </view>
  <view wx:if="{{showPingLun_bool}}" bindtap="closePingLun_fun"  class="pinglun-wrap">
    <view class="pinglun" catchtap="empty_fun" style="bottom: {{0}}px;">
      <view class="top-wrap">
        <textarea focus="{{replyFocus_bool}}" style="height: {{replyHeight_flo}}rpx;" cursor-spacing="{{300}}" show-confirm-bar="{{false}}" bindkeyboardheightchange="keyboardheight_fun" placeholder="{{commentPlaceholder_str}}" bindinput="setInputValue_fun"></textarea>
        <image mode="aspectFit" bindtap="extend_fun" src="/img/extend.png"></image>
      </view>
      <view class="pic-wrap">
        <image mode="aspectFit" bindtap="useCamera_fun" src="/img/pic.png" class="pic-icon"></image>
        <text class="send" bindtap="chat_fun">发送</text>
      </view>
    </view>
  </view>
</view>