
page,view,text,swiper,swiper-item,image,navigator,input,textarea{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

/*
  主题颜色
*/
page{
  /* 定义主题颜色 */
  --themeColor: #eb4450;
  --colorGray: #ededed;
  --colorBlue: #489CD7;
  --colorBlue1: #00B4FF;
  --colorGray1: #887676;
  --colorOrange: #ed7b25;
  --colorOrange1: #ff7e17;
  --colorTop: #fff;

  font-size: 28rpx;

  /* 4类基本字体大小 */
  --fs_28: 28rpx;
  --fs_36: 36rpx;
  --fs_45: 45rpx;
  --fs_48: 48rpx;
}

.clearfix::after {
  clear:both;
  display: block;
  content:'';
}