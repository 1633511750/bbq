.clearfix::after {
  display: block;
  content: '';
  clear: both;
}
.wrapper .blank {
  height: 16rpx;
  background-color: transparent;
}
.wrapper .comment {
  background-color: #fff;
  width: 718rpx;
  margin-left: 16rpx;
  padding: 18rpx 34rpx 0;
  border-radius: 10rpx;
  position: relative;
  box-shadow: 0 0 10rpx 0 #F2F2F2;
}
.wrapper .comment .item .headPic {
  width: 82rpx;
  height: 82rpx;
  border-radius: 41rpx;
  background-size: 100% 100%;
}
.wrapper .comment .item .info {
  width: calc(100% - 105rpx);
  float: right;
}
.wrapper .comment .item .info .info-top .name {
  max-width: 450rpx;
  height: 56rpx;
  line-height: 56rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 26rpx;
  font-weight: bold;
  color: #666;
  position: absolute;
  top: 18rpx;
  left: 130rpx;
}
.wrapper .comment .item .info .info-top .name image {
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
  position: relative;
  top: -2rpx;
}
.wrapper .comment .item .info .info-top .video {
  height: 36rpx;
  line-height: 34rpx;
  padding: 0 20rpx;
  border-radius: 21rpx;
  color: #fff;
  position: absolute;
  top: 30rpx;
  right: 36rpx;
  background-color: #43D7B5;
  font-size: 22rpx;
}
.wrapper .comment .item .info .info-bottom {
  font-size: 20rpx;
  color: #aaa;
  position: absolute;
  left: 130rpx;
  top: 74rpx;
  height: 28rpx;
  line-height: 28rpx;
}
.wrapper .comment .item .info .info-bottom .time {
  margin-left: 10rpx;
}
.wrapper .comment .desc {
  line-height: 44rpx;
  font-size: 32rpx;
  margin-top: 28rpx;
}
.wrapper .comment .img {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}
.wrapper .comment .img image {
  width: 206rpx;
  height: 206rpx;
  border-radius: 15rpx;
}
.wrapper .comment .footer {
  margin-top: 25rpx;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  padding-bottom: 22rpx;
}
.wrapper .comment .footer .f1 {
  flex: 1;
  text-align: left;
}
.wrapper .comment .footer .f1 image {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}
.wrapper .comment .footer .f1 .heart {
  font-size: 28rpx;
  position: relative;
  top: 3rpx;
  margin-left: 10rpx;
  font-weight: lighter;
}
.wrapper .comment .footer .f2 {
  flex: 1;
  text-align: center;
}
.wrapper .comment .footer .f2 image {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}
.wrapper .comment .footer .f2 .chat {
  font-size: 28rpx;
  position: relative;
  top: 3rpx;
  margin-left: 10rpx;
  font-weight: lighter;
}
.wrapper .comment .footer .f3 {
  flex: 1;
  text-align: right;
}
.wrapper .comment .footer .f3 image {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}
.wrapper .comment .footer .f3 .zan {
  font-size: 28rpx;
  position: relative;
  top: 3rpx;
  margin-left: 10rpx;
  font-weight: lighter;
}
